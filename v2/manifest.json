{
  "manifest_version": 3,
  "name": "My Notes",
  "version": "1.0",
  "description": "A simple note-taking app for Chrome.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "note.png",
      "48": "note.png",
      "128": "note.png"
    }
  },
  "icons": {
    "16": "note.png",
    "48": "note.png",
    "128": "note.png"
  }
}
